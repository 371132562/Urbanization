{
  "name": "urbanization",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "pnpm --filter ./frontend dev",
    "build:frontend": "pnpm --filter ./frontend build",
    "build:backend": "pnpm --filter ./backend build",
    "build:loading-frontend": "pnpm --filter ./loading-frontend build",
    "build": "rm -rf ./release && pnpm build:frontend && pnpm build:loading-frontend && pnpm build:backend && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/371132562/Urbanization.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/371132562/Urbanization/issues"
  },
  "homepage": "https://github.com/371132562/Urbanization#readme",
  "description": "An application for urbanization.",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@faker-js/faker": "^9.8.0",
    "@types/node": "^22.15.2",
    "electron": "^37.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "build": {
    "appId": "Urbanization",
    "productName": "Urbanization",
    "publish": null,
    "electronLanguages": ["zh-CN", "en-US"],
    "directories": {
      "app": "electron",
      "output": "release"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "backend/prisma",
        "to": "backend/prisma"
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "node_modules",
        "to": "node_modules"
      },
      {
        "from": "frontend/dist",
        "to": "frontend-dist"
      },
      {
        "from": "loading-frontend/dist",
        "to": "loading-frontend-dist"
      }
    ],
    "mac": {
      "target": "zip"
    },
    "win": {
      "target": "portable",
      "icon": "frontend/public/icon.png",
      "signAndEditExecutable": false,
      "artifactName": "${productName}-v${version}.${ext}"
    }
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "electron-log": "^5.4.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  }
}