{
  "name": "urbanization-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:frontend": "pnpm --filter ../frontend build",
    "build:generate": "pnpm --filter ../backend generate",
    "build:backend": "pnpm --filter ../backend build",
    "build": "rm -rf ./release && pnpm build:frontend && pnpm build:generate && pnpm build:backend && electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "Urbanization",
    "productName": "Urbanization",
    "publish": null,
    "electronLanguages": [
      "zh-CN",
      "en-US"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      },
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "../node_modules",
        "to": "node_modules"
      },
      {
        "from": "../pnpm-lock.yaml",
        "to": "pnpm-lock.yaml"
      },
      {
        "from": "../package.json",
        "to": "package.json"
      },
      {
        "from": "../pnpm-workspace.yaml",
        "to": "pnpm-workspace.yaml"
      }
    ],
    "mac": {
      "target": "zip"
    },
    "win": {
      "target": "portable",
      "icon": "frontend/public/icon.png",
      "signAndEditExecutable": false,
      "artifactName": "${productName}-v${version}.${ext}"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.2"
  }
}
